@*@model thegioididong.Models.ado_Category*@
@using Main.Models;

@{
    ViewBag.Title = "deleteShow";
    Layout = "~/Areas/Admin/Views/Shared/admin_page.cshtml";
    var info = Session["info"] as Product;
}
<style>
    div a {
        color: blue;
    }

    p a {
        color: blue;
    }
</style>

<h2>DELETE</h2>

<h3>Are you sure you want to delete this?</h3>
@using (Html.BeginForm("deleteProduct", "Product"))
{
    @Html.AntiForgeryToken()
    <hr />

    <dl class="dl-horizontal">
        <table class="table table-bodered table-responsive">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>TÊN</th>
                    <th>MÔ TẢ</th>
                    <th>LOẠI</th>
                    <th>HÃNG</th>
                </tr>
            </thead>
            <tr>
                @if (info != null)
                {
                    <td>@info.Id</td>
                    <td style="padding:5px 120px">@info.Name</td>
                    <td>@info.Description</td>
                    <td style="padding:5px 120px">@info.Category.Name</td>
                    <td>@info.Brand.Name</td>
                }
            </tr>
            <form method="post">
                <input type="hidden" name="id" value="@info.Id">
            </form>
        </table>
    </dl>
    <div class="form-actions no-color" style="margin-left: 120px;padding: 20px 0px">
        <button type="submit" style="width:75px;height:30px">Xóa</button>
    </div>
}
<div>
    <a href="@Url.Action("showProduct","Product")" style="color:blue">Back to Product list</a>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>