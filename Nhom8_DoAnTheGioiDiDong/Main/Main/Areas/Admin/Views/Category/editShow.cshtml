@model Main.Models.Category

@{
    ViewBag.Title = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/admin_page.cshtml";
}
<style>
    .form-horizontal * {
        padding: 10px 0px;
    }
</style>
<h2>TẠO LOẠI SẢN PHẨM MỚI</h2>

@using (Html.BeginForm("editShow", "Category"))
{
    <div class="form-horizontal">
        <hr style="padding: 0px" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên loại
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            Đường dẫn ảnh
            <div class="col-md-10">
                <input type="file" name="Img" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" style="width:100px" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "showCategory", "Category")
</div>
