@model Main.Models.Category

@{
    ViewBag.Title = "createCategory";
    Layout = "~/Areas/Admin/Views/Shared/admin_page.cshtml";
}
<style>
    #Name {
        width: 500px;
        height: 10px;
    }
    .form-horizontal * {
        padding: 10px 0px;
    }
</style>
<h2>TẠO LOẠI SẢN PHẨM MỚI</h2>

@using (Html.BeginForm("createCategory", "Category"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr style="padding: 0px" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên loại
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Đường dẫn ảnh
            <div class="col-md-10">
                <input type="file" name="Img"/>
                @Html.ValidationMessageFor(model => model.Img, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left: 120px; ">
                <input type="submit" value="Tạo" class="btn btn-default" style="width:100px" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("showCategory","Category")" style="color:blue">Back to Category list</a>
</div>
